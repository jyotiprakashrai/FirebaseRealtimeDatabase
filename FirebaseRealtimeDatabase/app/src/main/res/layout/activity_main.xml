<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prakash.jyoti.com.firebaserealtimedatabase.MainActivity">


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
       android:hint="Enter Name"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/spinnerGenres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextName"
        android:layout_marginTop="18dp"
        android:entries="@array/genres" />

    <Button
        android:id="@+id/addArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerGenres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Add artist" />

    <ListView
        android:padding="50dp"
        android:background="@drawable/boarder"
        android:id="@+id/listViewArtists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addArtist" />
</RelativeLayout>
